<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:id="@+id/layout_danhba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginBottom="8dp"
            android:text="ĐỌC TOÀN BỘ DANH BẠ" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_docdanhba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_button_danhba"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Đọc danh bạ"
            android:textColor="@color/white">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_tinnhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:text="ĐỌC TOÀN BỘ TIN NHẮN" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_doctinnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_button_sms"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Đọc tin nhắn"
            android:textColor="#FFEB3B">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</LinearLayout>